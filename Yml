name: Cronjob DB Pasaporte - Ping Admin Daily

on:
  schedule:
    - cron: '0 9 * * *'          # Todos los días a las 09:00 UTC (9 de la mañana)
  workflow_dispatch:             # Permite ejecutarlo manualmente para pruebas

jobs:
  ping:
    runs-on: ubuntu-latest
    steps:
      - name: Hacer GET a la página admin
        run: |
          curl -X GET "https://pasaportedigitaldelvino.github.io/app/?page=admin" \
            --fail-with-body \
            -o /dev/null \
            -w "HTTP %{http_code} - %{url_effective} - %{time_total}s\n" \
            -H "User-Agent: GitHub-Actions-Cron-Ping/1.0" \
            -H "Accept: text/html,application/xhtml+xml"
